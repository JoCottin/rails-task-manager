<h2>
  <%= @task.title %></h2>
  <h1><%= @task.details %></h1>
  <h3><%= @task.completed %></h3>
  <p><%= link_to "edit the task", edit_path %></p>
  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "You sure?" } %>

  <p><%= link_to "back to list", tasks_path %></p>
